{
  "name": "self-checkout-system",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:next\" \"npm run dev:python\"",
    "dev:next": "next dev --turbopack -p 3002",
    "dev:python": "cd services && python app.py",
    "build": "next build",
    "build:windows": "set NODE_OPTIONS=--max-old-space-size=4096 && next build",
    "build:clean": "rimraf .next && next build",
    "start": "concurrently \"npm run start:next\" \"npm run start:python\"",
    "start:next": "next start -p 3002",
    "start:python": "cd services && python app.py",
    "lint": "next lint",
    "deploy:pi": "./scripts/deploy-pi.sh",
    "env:setup": "npm run env:copy && cd services && npm run env:copy",
    "env:copy": "if not exist .env copy .env.example .env",
    "env:check": "node -e \"console.log('Frontend PORT:', process.env.PORT); console.log('API URL:', process.env.NEXT_PUBLIC_API_BASE_URL);\"",
    "dev:full": "npm run env:setup && npm run dev",
    "kill:ports": "taskkill /IM node.exe /F",
    "start:dev": "npm run kill:ports && npm run dev"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-select": "^2.1.2",
    "@radix-ui/react-separator": "^1.1.0",
    "@radix-ui/react-slider": "^1.2.1",
    "@radix-ui/react-switch": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.1",
    "@tanstack/react-query": "^5.59.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.513.0",
    "next": "15.3.3",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-qr-code": "^2.0.15",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "rimraf": "^3.0.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5"
  }
}